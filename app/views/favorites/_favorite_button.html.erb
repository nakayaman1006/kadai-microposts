<% if current_user.favorite?(favpost) %>
  <%= form_with(model: current_user.favorites.find_by(micropost_id: favpost.id), local: true, method: :delete) do |f| %>
    <%= hidden_field_tag :micropost_id, favpost.id %>
    <%= f.submit 'お気に入り削除', class: 'btn btn-success' %>
  <% end %>
<% else %>
  <%= form_with(model: current_user.favorites.build, local: true) do |f| %>
    <%= hidden_field_tag :micropost_id, favpost.id %>
    <%= f.submit 'お気に入り登録', class: 'btn btn-success' %>
  <% end %>
<% end %>
